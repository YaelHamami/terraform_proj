{
  "security_rules": [
    {
      "name": "allow_TCP_in",
      "priority": 110,
      "direction": "Inbound",
      "access": "Allow",
      "protocol": "Tcp",
      "source_port_range": "*",
      "destination_port_range": "22",
      "source_address_prefix": "${hub_subnet_mask}",
      "destination_address_prefix": "${spoke_subnet_mask}"
    },
    {
      "name": "allow_TCP_out",
      "priority": 110,
      "direction": "Outbound",
      "access": "Allow",
      "protocol": "Tcp",
      "source_port_range": "*",
      "destination_port_range": "22",
      "source_address_prefix": "${spoke_subnet_mask}",
      "destination_address_prefix": "${hub_subnet_mask}"
    }
  ]
}